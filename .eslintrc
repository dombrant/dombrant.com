{
  "extends": "eslint:recommended",

  "env": {
    "browser": true,
    "node": true
  },

  "globals": {
    "headerSlideAnimation": true,
    "isInView": true,
    "mainDivsFadeIn": true,
    "Promise": true,
    "scrollToAbout": true,
    "Set": true,
    "smoothScroll": true,
    "toggleMobileNav": true
  },

  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
    "experimentalObjectRestSpread": true
    }
  },

  "rules": {
    "no-var": 2,
    "no-unused-vars": 0,
    "no-console": 0,
    "no-alert": 1
  }
}
